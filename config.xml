<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget android-versionCode="0101050" id="net.khertan.forrunners" version="1.1.5" versionCode="0101050" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>ForRunners</name>
  <description>
    A gps tracker for runners
    </description>
  <author email="khertan@khertan.net" href="http://khertan.net/">
      Beno√Æt HERVIER (Khertan)
  </author>
  <content src="index.html"/>
  <access origin="*"/>
  <access launch-external="yes" origin="mailto:*"/>
  <access origin="http://openweathermap.org/"/>
  <access origin="http://a.tile.openstreetmap.org/"/>
  <access origin="http://b.tile.openstreetmap.org/"/>
  <access origin="http://c.tile.openstreetmap.org/"/>
  <access origin="https://maps.googleapis.com/"/>
  <allow-navigation href="http://a.tile.openstreetmap.org/"/>
  <allow-navigation href="http://b.tile.openstreetmap.org/"/>
  <allow-navigation href="http://c.tile.openstreetmap.org/"/>
  <preference name="webviewbounce" value="false"/>
  <preference name="UIWebViewBounce" value="false"/>
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="BackupWebStorage" value="local"/>
  <preference name="KeepRunning" value="True"/>
  <preference name="LoadingDialog" value="My Title,My Message"/>
  <preference name="SplashScreen" value="screen"/>
  <preference name="SplashScreenDelay" value="20000"/>
  <preference name="Orientation" value="portrait"/>
  <preference name="android-manifest/application/activity/@android:launchMode" value="singleTask"/>
  <preference name="StatusBarBackgroundColor" value="#000000" />
  <feature name="StatusBar">
    <param name="ios-package" onload="true" value="CDVStatusBar"/>
  </feature>
  <platform name="firefoxos">
    <icon height="512" src="/icon/icon-512.png" width="512"/>
    <icon height="128" src="/icon/icon-128.png" width="128"/>
    <icon height="90" src="/icon/icon-90.png" width="90"/>
    <icon height="60" src="/icon/icon-60.png" width="60"/>
  </platform>
  <platform name="android">
    <preference name="android-minSdkVersion" value="19"/>
    <preference name="android-targetSdkVersion" value="25"/>
    <preference name="LoadingDialog" value="My Title,My Message"/>
    <preference name="AndroidLaunchMode" value="singleInstance"/>
    <preference name="DefaultVolumeStream" value="media"/>
    <preference name="AndroidPersistentFileLocation" value="Internal"/>
    <preference name="AutoHideSplashScreen" value="false"/>
    <preference name="SplashScreenDelay" value="20000"/>
    <preference name="ShowSplashScreenSpinner" value="false"/>
    <icon src="resources/android/icon/drawable-ldpi-icon.png" density="ldpi"/>
    <icon src="resources/android/icon/drawable-mdpi-icon.png" density="mdpi"/>
    <icon src="resources/android/icon/drawable-hdpi-icon.png" density="hdpi"/>
    <icon src="resources/android/icon/drawable-xhdpi-icon.png" density="xhdpi"/>
    <icon src="resources/android/icon/drawable-xxhdpi-icon.png" density="xxhdpi"/>
    <icon src="resources/android/icon/drawable-xxxhdpi-icon.png" density="xxxhdpi"/>
