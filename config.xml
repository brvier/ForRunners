<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="0102020" id="net.khertan.forrunners" version="1.2.2" versionCode="0102020" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ForRunners</name>
    <description>
    A gps tracker for runners
    </description>
    <author email="b@rvier.fr" href="http://rvier.fr/">
      Beno√Æt HERVIER
  </author>
    <content src="index.html" />
    <access origin="*" />
